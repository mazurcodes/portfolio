---
interface Props {
  overviewText: string | undefined;
}
const { overviewText } = Astro.props;
---

<section class="overview">
  <h3>Overview</h3>
  <p>
    {overviewText}
  </p>
</section>

<style lang="scss">
  .overview {
    width: 100%;
    max-width: 700px;
    
    h3 {
      padding-bottom: 90px;
    }
    p {
      padding-bottom: 30px;
      text-align: justify;
    }
  }
</style>
